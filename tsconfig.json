{
  "compilerOptions": {
    
    "target": "es2016",  
    "module":"CommonJS",
    "baseUrl": "./src", 
    "rootDir": "./",                         
    
                         
                                    
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*":["shared/*"],
      "@errors/*":["errors/*"],
      "@utils/*":["utils/*"]
      },  
    
    "esModuleInterop": true,          
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./dist",          
    "forceConsistentCasingInFileNames": true,   
    "resolveJsonModule": true
  }
}
